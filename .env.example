# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# GitHub OAuth (NextAuth)
AUTH_GITHUB_ID=your-github-client-id
AUTH_GITHUB_SECRET=your-github-client-secret

# NextAuth Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-nextauth-secret

# ===================
# Observability
# ===================

# Sentry Error Tracking
# Get your DSN from https://sentry.io
SENTRY_DSN=https://your-key@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id

# Enable Sentry debug logging in development (optional)
# SENTRY_DEBUG=true

# Logging level: debug, info, warn, error
# Default: info in production, debug in development
LOG_LEVEL=info

# Metrics endpoint protection (optional)
# If not set, metrics endpoint is publicly accessible
METRICS_AUTH_TOKEN=your_secret_metrics_token

# ===================
# Process Queue (optional)
# ===================
# MAX_CONCURRENT_PROCESSES=3
# MAX_QUEUE_SIZE=10
# QUEUE_TIMEOUT_MS=60000
